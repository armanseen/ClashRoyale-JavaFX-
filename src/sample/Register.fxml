<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane fx:controller="sample.Register" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <style>
        -fx-background-color: linear-gradient(to top,#FFFFFF,#6DD5FA,#2980B9);;
    </style>



    <Text GridPane.columnSpan="2" text="Register" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="-50.0" />
        </GridPane.margin>
        <font>
            <Font size="16.0" />
        </font>
    </Text>

    <Label text="User Name"
           GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>


    <TextField fx:id="UserField" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>

    <Label text="Password" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>

    <PasswordField fx:id="PasswordField" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>

    <HBox spacing="10" alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <Button text="Sign Up" onAction="#SignUp"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <Button text="Sign In" onAction="#SignIn"/>
    </HBox>
</GridPane>